<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-user-money" author="karandashov">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="user"/>
            <not>
                <columnExists tableName="user" columnName="money"/>
            </not>
        </preConditions>
        
        <comment>Add user column money</comment>
        
        <addColumn tableName="user">
            <column name="money" type="number" defaultValueNumeric="10000"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="user" columnName="money"/>
        </rollback>
    </changeSet>
</databaseChangeLog>